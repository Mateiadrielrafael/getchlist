{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": true
  },
  "include": ["./packages/*/src/**/*.ts"]
}
